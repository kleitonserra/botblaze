def qualnum(x):
    return int(x)


def qualcor(x):
    if qualnum(x) <= 7:
        return 'V'
    if qualnum(x) > 7:
        return 'P'
        ##ESTRATEGIAS##


def sequencia(padrao):
    if padrao[0:6] == ['V', 'V', 'V', 'P', 'P', 'P']:
        return entradap
    if padrao[0:6] == ['P', 'P', 'P', 'V', 'V', 'V']:
        return entradav
    if padrao[0:6] == ['P', 'P', 'P', 'P', 'P', 'P']:
        return entradap

    if padrao[0:6] == ['V', 'V', 'V', 'V', 'V', 'V']:
        return entradav

    if padrao[0:6] == ['P', 'P', 'V', 'V', 'V', 'V']:
        return entradap

    if padrao[0:6] == ['V', 'V', 'P', 'P', 'P', 'P']:
        return entradav

    if padrao[0:3] == ['P', 'V', 'V']:
        return entradav

    if padrao[0:2] == ['V', 'V']:
        return entradav

    if padrao[0:3] == ['P', 'V', 'V']:
        return entradap

    if padrao[0:3] == ['V', 'P', 'V']:
        return entradav

    if padrao[0:3] == ['V', 'V', 'V']:
        return entradav

    if padrao[0:3] == ['V', 'V', 'V']:
        return entradap

    if padrao[0:4] == ['P', 'V', 'P']:
        return entradav

    if padrao[0:4] == ['V', 'P', 'V']:
        return entradav

    if padrao[0:8] == ['V', 'V', 'P', 'P']:
        return entradav

    if padrao[0:8] == ['P', 'P', 'V', 'V']:
        return entradap

    else:
        return """A A A A A A A A A A A A A A A A A A A A A A A A A"""


def WinOrLoss(msg):
    sleep(10)
    pegarrusltado = nav.find_element(By.XPATH, '//*[@id="roulette-recent"]').text
    WL = pegarrusltado.split()[0]
    wlcor = qualcor(WL)
    print('O resultado √©:', wlcor)

    if msg == 'NENHUMA':
        return
    if msg == wlcor:
        
        bot.send_message(chat_id=user_id, text='''  "‚úÖPAGAAAA‚úÖ "
        ''')


    else:
        
        bot.send_message(chat_id=user_id, text=''' "‚ùå Tomou loss no double? Logo recuperamos! "
        ''')


while True:
